#import "theme://include/defs.view"
#import "theme://include/buttons.view"

#define TYPE_ENTRY(LABEL, TITLE, ICON, COLOR) {
  widget(backdrop, {
    .focusable = 0.1;
    .focusOnClick = true;
    onEvent(activate, {
      $self.model.svctype = LABEL;
    });

    .alphaSelf = iir(isFocused() * 1, 8) * 0.8;
    .color = COLOR;

    PLATE_GFX();
    widget(container_z, {
      widget(icon, {
	.color = select($self.model.svctype == LABEL ||
			isHovered() || isFocused(),
			[1.0, 1.0, 1.0],
			COLOR);
	.shadow = true;
	.source = ICON;
	.sizeScale = 2;
      });

      widget(icon, { 
	.alpha = iir($self.model.svctype == LABEL, 4); 
	.color = select($self.model.svctype == LABEL ||
			isHovered() || isFocused(),
			[1.0, 1.0, 1.0],
			COLOR);
	.shadow = true; 
	.source = "theme://svg/Selected.svg"; 
	.sizeScale = 2; 
      });
    });
  });
}


widget(container_x, {

  widget(icon, {
    .align = top;
    .color = select(isFocused(), [1.0, 1.0, 1.0], PLATE_COLOR_OTHER());
    .source = "theme://svg/Bookmark.svg";
    .shadow = true;
  });
  
  widget(backdrop, {
    .weight = 1.5;
    .focusOnClick = true;
    .filterConstraintX = true;

    .alphaSelf = 0.5;

    .color = PLATE_COLOR_OTHER();
    PLATE_GFX();

    widget(container_y, {

      widget(container_x, {
	widget(label, {
	  .width = $ui.size * 8;
	  .caption = "Title:";
	  .align = right;
	});

	widget(dummy, {
	  .width = 10;
	});

	widget(backdrop, {
	  .filterConstraintX = true;
	  .weight = 1.0;
	  .source = "theme://graphics/shadedplate.png";
	  .border =  [4, 4, 4, 4];
	  .padding = [0, -3, 0, -3];
	  
	  .color = [0, 0, 0];
	  .alphaSelf = 0.66;
      
	  widget(text, {
	    .focusable = 1.0;
	    bind($self.model.title);
	  });
	});
      });


      widget(container_x, {
	widget(label, {
	  .width = $ui.size * 8;
	  .caption = "URL:";
	  .align = right;
	});

	widget(dummy, {
	  .width = 10;
	});

	widget(backdrop, {
	  .filterConstraintX = true;
	  .weight = 1.0;
	  .source = "theme://graphics/shadedplate.png";
	  .border =  [4, 4, 4, 4];
	  .padding = [0, -3, 0, -3];
	  
	  .color = [0, 0, 0];
	  .alphaSelf = 0.66;
      
	  widget(text, {
	    .focusable = 1.0;
	    bind($self.model.url);
	  });
	});

	widget(dummy, {
	  .width = 2;
	});

	widget(icon, {
	  .color = translate($self.model.status,
			     [1.0, 1.0, 1.0],
			     "ok",   [0.2, 1.0, 0.2],
			     "auth", [1.0, 0.2, 0.2],
			     "fail", [1.0, 0.2, 0.2],
			     "scanning", [0.7, 0.7, 0.2]);

	  .source = translate($self.model.status,
			      void,
			      "ok",   "theme://svg/Check.svg",
			      "auth", "theme://svg/Lock.svg",
			      "fail", "theme://svg/Alert.svg",
			      "scanning", "theme://svg/Scan.svg");
	  .shadow = true;
	});
      });

      widget(expander_y, {

	.expansion = scurve(select($self.model.statustxt, 1, 0), 0.15);
	.alpha     = scurve(select($self.model.statustxt, 1, 0), 0.15);

	widget(container_x, {
	
	  widget(dummy, {
	    .width = $ui.size * 8 + 10;
	  });

	  widget(label, {
	    .color = [1.0, 0.2, 0.2];
	    .caption = $self.model.statustxt;
	  });
	});
      });

      widget(container_x, {
	widget(dummy, {
	  .width = $ui.size * 8 + 10;
	});

	widget(backdrop, {
	  .filterConstraintX = true;
	  .weight = 1.0;
	  .source = "theme://graphics/shadedplate.png";
	  .border =  [4, 4, 4, 4];
	  .padding = [-3, -3, -3, -3];
	  
	  .color = [0, 0, 0];
	  .alphaSelf = 0.66;

	  widget(container_x, {
	    ICON2("theme://svg/Delete.svg",
		  "Delete",
		  {
		    delete($self);
		  },
		  PLATE_COLOR_DELETE(),
		  1, false, true);
	  });
	});
      });
    });
  });
});
